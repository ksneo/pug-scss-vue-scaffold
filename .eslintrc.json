{
    "parserOptions": {
        "parser": "babel-eslint",
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "extends": ["airbnb", "prettier", "plugin:vue/recommended"],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": ["error", { "singleQuote": true }],
        "quotes": ["error", "single"],
        "linebreak-style": "off",
        "no-param-reassign": "off",
        "import/no-extraneous-dependencies": "off",
        "import/prefer-default-export": "off",
        "global-require": 0  
    }
}
